<script type="text/javascript" src="https://www.google.com/jsapi"></script>


<script type="text/javascript">
 var theme = 'bootstrap';
 $("#optionsExpander").jqxExpander({ width: '100%', theme: theme,  expanded: false});
 
</script>
<script type="text/javascript">

    
      $('#limitmenu').on('select', function (event) {
                    var args = event.args;
                    if (args != undefined) {
                        var item = event.args.item;
                        if (item != null) {
                            drawChart(item.label);
                        }
                    }
                });
      
      var source = ["1000","500","250","200","100","50","10","2"]; 
      
     $("#limitmenu").jqxComboBox({ source: source, width: '60px', height: '25px', selectedIndex:0}); 
	
     function drawChart(limit) {
      var params = {"limit": limit};
      var jsonData = $.ajax({
          url: "freelancerdemography_getdata",
          dataType:"json",
          type: "POST",
          data: JSON.stringify(params),
          async: false
          }).responseText;


      var data = new google.visualization.DataTable(jsonData);


      var chart = new google.visualization.PieChart(document.getElementById('visualization'));
      
      chart.draw(data, {title:"Freelancers Demography",width: 800, height: 600, is3D: true});
      
      var tablearea = new google.visualization.Table(document.getElementById('tablearea'));
      tablearea.draw(data,null);
    }
	
		
    drawChart("1000");
</script>







 <div id='optionsExpander'>
            <div>Options</div>
            <div>
                <ul>
                    <div id="limitmenu">Limit:</div>          
                </ul>
            </div>
        </div>

<div style = "background-color:#b0c4de; height: 30px; padding: 10px 10px 10px 10px">

</div>

<div style="background-color: #eee; height:70px">
<div><img src="http://www.nabbesh.com/static/images/nabbesh_logo.png"></div>
</div>
<div id="visualization" style="width: 800px; height:600px; float: left;"></div>
<div id="tablearea" style="width: 300px; height:100%; float: left;"></div>


              
    

