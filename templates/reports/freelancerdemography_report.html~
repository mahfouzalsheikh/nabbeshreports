<script type="text/javascript" src="https://www.google.com/jsapi"></script>

<script type="text/javascript">

    
      $('#limitmenu').on('select', function (event) {
                    var args = event.args;
                    if (args != undefined) {
                        var item = event.args.item;
                        if (item != null) {
                            drawChart(item.label);
                        }
                    }
                });
      
      var source = ["1000","500","250","200","100","50","10","2"]; 
      
     $("#limitmenu").jqxComboBox({ source: source, width: '200px', height: '25px', selectedIndex:0}); 
	
     function drawChart(limit) {
      var params = {"limit": limit};
      var jsonData = $.ajax({
          url: "freelancerdemography_getdata",
          dataType:"json",
          type: "POST",
          data: JSON.stringify(params),
          async: false
          }).responseText;

      // Create our data table out of JSON data loaded from server.
      var data = new google.visualization.DataTable(jsonData);

      // Instantiate and draw our chart, passing in some options.
      var chart = new google.visualization.PieChart(document.getElementById('visualization'));
      
      chart.draw(data, {title:"Freelancers Demography",width: 800, height: 600});
      
      var tablearea = new google.visualization.Table(document.getElementById('tablearea'));
      tablearea.draw(data,null);
    }
	
		
    drawChart("1000");
</script>






<div id="print_button_container"><button type="button" onclick="PrintElem('#reportcontent')">Print</button></div>


<div id="limitmenu">Limit:</div>
